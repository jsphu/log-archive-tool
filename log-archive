#!/bin/bash
dir="$1"

function usage() {
  echo "Usage: $0 [directory]"
  echo "Description: $0 archives bash history to given directory."
  echo "Examples:"
  echo "    $0 new-directory"
  echo "    $0 old-existing-directory"
}

# Argument handling
if [ $# -gt 1 ]; then
  echo "Error: $0 takes exactly one argument."
  echo "Unkown arguments: $*"
  echo ""
  usage 
  exit 2
elif [ -z "$dir" ]; then
  echo "Error: $0 needs a positional-argument"
  echo ""
  usage 
  exit 2
fi 

history=~/.bash_history
# Checks bash history
if [ ! -e $history ]; then
  echo "Error: $0 did not found bash history file."
  echo "Program only works with .bash_history file"
  echo "Program sad."
  echo "Program exits."
  exit 1
fi 

function isrelative() {
    first=$(echo "$dir"|head -c 1)
    
    if [ "$first"=="." ]; then
        return true  
    
    elif [ "$first"=="/" ]; then 
    
        home="$(echo "$dir" |head -c 5)"
        
        if [ "$home"!="/home" ]; then
            echo "Warning: You are outside of the home."
        fi
        return false
    
    else 
        return false
    fi
}

if [ isrelative ]; then
    newdir="$(pwd)/$dir"
else
    newdir="$dir"
fi

if [ ! -d $newdir ]; then
  mkdir $newdir 
  echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] $newdir not found." >> $dir/$0-hist.log
  echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ mkdir $newdir" >> $dir/$0-hist.log
fi 

cd $newdir
#ls -a

echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] Changed directory to $newdir" >> $newdir/$0-hist.log
echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ cd $newdir" >> $newdir/$0-hist.log

name=$(date -Iseconds |tr -d ":+T-" |head -c -5)

grep "$dir" ~/.bash_history > relations.log
echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] Relations writed to $dir/relations.log" >> $newdir/$0-hist.log
echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ grep '$dir' ~/.bash_history">> $newdir/$0-hist.log

cp ~/.bash_history $newdir/$name.bash_history
echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] .bash_history file copied to $newdir" >> $newdir/$0-hist.log
echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ cp ~/.bash_history $newdir/$name.bash_history" >> $newdir/$0-hist.log

echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] $newdir archived." >> $newdir/$0-hist.log
echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ tar -czvf $0-$name.tar.gz relations.log .bash_history $0-hist.log" >> $newdir/$0-hist.log
echo "[LOG$(date -Iseconds |tr -d ":+T-" |head -c -5)] Old files removed." >> $newdir/$0-hist.log
echo "[CMD$(date -Iseconds |tr -d ":+T-" |head -c -5)] $ rm -f relations.log .bash_history $0-hist.log" >> $newdir/$0-hist.log

tar -czvf $0-$name.tar.gz relations.log .bash_history $0-hist.log > /dev/null

rm -f relations.log .bash_history $0-hist.log

echo "Archived inside: $newdir"
